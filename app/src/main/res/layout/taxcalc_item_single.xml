<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clipToPadding="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/light_grey"
        android:elevation="2dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/taxitem_countTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/min_red"
            android:paddingBottom="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="3dp"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/taxitem_taxOptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/taxitem_countTextView"
            android:padding="5dp"
            android:text="Regular Tax (8.00%)"
            android:textColor="@color/min_red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/taxitem_discountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/taxitem_taxOptionTextView"
            android:layout_below="@+id/taxitem_taxOptionTextView"
            android:padding="5dp"
            android:text="Discount: 10.0%"
            android:textColor="@color/dark_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/taxitem_priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/taxitem_countTextView"
            android:layout_marginTop="1dp"
            android:text="$9999.99"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="26sp" />
    </RelativeLayout>
</LinearLayout>