<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:clipToPadding="false"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/cellBackgroundSeparator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            android:clipToPadding="false"
            android:elevation="3dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/weekNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/calendarIconTextView"
                android:gravity="center"
                android:text="Week 52"
                android:textColor="@color/dark_grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hoursScheduledTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/weekNumberTextView"
                android:paddingStart="5dp"
                android:text="40 hours 0 minutes scheduled"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/calendarIconTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="@string/fa_calendar"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>
